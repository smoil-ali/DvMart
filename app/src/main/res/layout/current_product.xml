<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_8sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="@dimen/_2sdp"
        app:cardUseCompatPadding="true"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_16sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Product Name is here"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                >
            </TextView>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/rating_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/product_title"
                app:layout_constraintTop_toBottomOf="@+id/product_title"
                android:layout_marginTop="@dimen/_16sdp"
                android:orientation="horizontal"
                >

            <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.1"
                android:isIndicator="true"
                style="?android:attr/ratingBarStyleSmall"
                />
                <TextView
                    android:id="@+id/customer_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="(customer review)"
                    android:textSize="@dimen/_12sdp"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/price_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/rating_layout"
                app:layout_constraintStart_toStartOf="@+id/product_title"
                android:layout_marginTop="@dimen/_16sdp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    android:text="old price"
                    />
                <TextView
                    android:id="@+id/new_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="new price"
                    android:textSize="@dimen/_16sdp"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:id="@+id/about_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/product_title"
                app:layout_constraintTop_toBottomOf="@+id/price_layout"
                android:layout_marginTop="@dimen/_16sdp"
                android:textSize="@dimen/_16sdp"
                android:text="About product"
                />
            <TextView
                android:id="@+id/delivery_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/about_product"
                app:layout_constraintStart_toStartOf="@+id/about_product"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="Delivery time"
                android:textSize="@dimen/_16sdp"
                />
            <TextView
                android:id="@+id/purchase_earn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/product_title"
                app:layout_constraintTop_toBottomOf="@+id/delivery_time"
                android:textSize="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="purchase and earn"
                />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/cart_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/product_title"
                app:layout_constraintTop_toBottomOf="@id/purchase_earn"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/btn_backgroung"
                    >
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_decrement"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="-"
                    android:textSize="@dimen/_16sdp"
                    android:background="@android:color/transparent"
                    />
                    <View
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="match_parent"
                        android:background="#CFCDCD"
                        />
                <TextView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="@dimen/_16sdp"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    />
                    <View
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="match_parent"
                        android:background="#CFCDCD"
                        />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_increment"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="@dimen/_16sdp"
                    android:background="@android:color/transparent"
                    />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:text="Add to cart"
                    android:backgroundTint="#FFA218"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:id="@+id/shipping_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/product_title"
                app:layout_constraintTop_toBottomOf="@+id/cart_layout"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="Estimated shipping date: N/A"
                android:textSize="@dimen/_16sdp"
                />
            <TextView
                android:id="@+id/cod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/product_title"
                app:layout_constraintTop_toBottomOf="@+id/shipping_date"
                android:layout_marginTop="@dimen/_16sdp"
                android:textSize="@dimen/_12sdp"
                android:text="Cash on Delivery available (300 and above)"
                />
            <TextView
                android:id="@+id/free_shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/product_title"
                app:layout_constraintTop_toBottomOf="@+id/cod"
                android:layout_marginTop="@dimen/_3sdp"
                android:textSize="@dimen/_12sdp"
                android:text="Free shipping (250 and above)"
                />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/product_title"
                app:layout_constraintTop_toBottomOf="@+id/free_shipping"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_16sdp"
                android:id="@+id/compare_layout"
                >
                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/compare_icon"
                    android:scaleType="center"
                    android:background="@android:color/transparent"
                    >
                </androidx.appcompat.widget.AppCompatImageButton>
                <TextView
                    android:id="@+id/compare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Compare"
                    android:textStyle="bold"
                    android:textSize="@dimen/_16sdp"
                    />
                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_favorite"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:scaleType="center"
                    android:background="@android:color/transparent"
                    >
                </androidx.appcompat.widget.AppCompatImageButton>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to wishlist"
                    android:textStyle="bold"
                    android:textSize="@dimen/_16sdp"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@+id/compare_layout"
                app:layout_constraintStart_toStartOf="@+id/product_title"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/sku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                app:layout_constraintStart_toStartOf="@+id/product_title"
                app:layout_constraintTop_toBottomOf="@+id/line"
                android:text="SKU : "
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/product_title"
                app:layout_constraintTop_toBottomOf="@+id/sku"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="Categories : "
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/category"
                app:layout_constraintStart_toStartOf="@+id/product_title"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_16sdp"
                >
                <TextView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share : "
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/f_icon"
                    android:scaleType="center"
                    android:background="@android:color/transparent"
                    >
                </androidx.appcompat.widget.AppCompatImageButton>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/t_icon"
                    android:scaleType="center"
                    android:background="@android:color/transparent"
                    >
                </androidx.appcompat.widget.AppCompatImageButton>


            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>