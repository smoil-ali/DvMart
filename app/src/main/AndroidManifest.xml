<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cgit.dvmart">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:largeHeap="true"
        android:usesCleartextTraffic="true"
        >
        <activity android:name=".Activities.Downloads"></activity>
        <activity android:name=".Activities.Orders" />
        <activity android:name=".Activities.CashPoints" />
        <activity android:name=".Activities.CurrentProduct" />
        <activity android:name=".Activities.Addresses" />
        <activity android:name=".Activities.ProfileDetails" />
        <activity android:name=".Activities.SignUp" />
        <activity
            android:name=".Activities.Home"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>